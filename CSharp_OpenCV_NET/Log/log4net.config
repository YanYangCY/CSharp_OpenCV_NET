<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<log4net>
		<!-- 1. 文件日志（按天滚动） -->
		<appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
			<!-- 日志文件路径：工作目录\Logs\log.txt -->
			<file value="Logs\PLlog" />

			<!-- true = 追加写入；false = 每次覆盖 -->
			<appendToFile value="true" />

			<!-- 滚动方式：Date 按日期；Size 按大小；Composite 两者结合 -->
			<rollingStyle value="Date" />
			
			<!-- 日期格式，用于生成新文件名-每小时滚动一次 -->
			<datePattern value="yyyyMMdd_HH'.txt'" />
			<!-- 关闭静态文件名 -->
			<staticLogFileName value="false" />

			<!-- 日志正文格式：时间 [级别] 消息 换行 -->
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%level] %message%newline" />
			</layout>
		</appender>

		<!-- 2. 控制台输出（调试用，发布可删） -->
		<appender name="Console" type="log4net.Appender.ConsoleAppender">
			<!-- 同上格式 -->
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%level] %message%newline" />
			</layout>
		</appender>

		<!-- 3. 根记录器：所有命名空间都生效 -->
		<root>
			<!-- 级别过滤器：ALL / DEBUG / INFO / WARN / ERROR / FATAL / OFF -->
			<level value="ALL" />

			<!-- 同时引用两个 appender：文件 + 控制台 -->
			<appender-ref ref="RollingFile" />
			<appender-ref ref="Console" />
		</root>
	</log4net>
</configuration>