<Window x:Class="CSharp_OpenCV_NET.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharp_OpenCV_NET.Views"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:core="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
        mc:Ignorable="d"
        Title="SplashWindow" Height="400" Width="600">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <core:InvokeCommandAction Command="{Binding WindowLoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- 背景图片（资源嵌入） -->
        <Image Grid.RowSpan="3" Source="/CSharp_OpenCV_NET;component/Assets/Images/Splash.jpg" Stretch="Fill"/>
        <!-- 初始化进度文本信息 -->
        <TextBlock   Margin="20 0 0 5" Grid.Row="1" Text="{Binding Tips}" FontSize="18"/>
        <!-- 进度条 -->
        <ProgressBar Margin="20 5 0 0" Grid.Row="2" Height="25" Minimum="0" Maximum="100" Value="{Binding Progress}" Style="{x:Null}"/>
    </Grid>
</Window>
