<Window x:Class="CSharp_OpenCV_NET.Views.UserLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:CSharp_OpenCV_NET.Views"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"      
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="/CSharp_OpenCV_NET;component/Assets/Icons/User.png"
        Title="用户登录" Height="300" Width="400">
    <Grid Margin="20" ShowGridLines="True" FocusManager.FocusedElement="{Binding ElementName=Password}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 用户名 -->
        <TextBlock Margin="40 10 0 10" Grid.Row="0" Grid.Column="0" Text="用户名：" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <ComboBox  Margin="5,10,0,10"  Grid.Row="0" Grid.Column="1" FontSize="16" HorizontalAlignment="Stretch" VerticalAlignment="Center" 
           ItemsSource="{Binding User.UserList}" SelectedIndex="0" 
           DisplayMemberPath="Name" SelectedValue="{Binding User.SelectedUser}" SelectedValuePath="Name">
        </ComboBox>
        <!-- 密码 -->
        <TextBlock Margin="40 10 0 10"  Grid.Row="1" Grid.Column="0" Text="密    码: " HorizontalAlignment="Left" VerticalAlignment="Top"  />
        <PasswordBox x:Name="Password" Margin="5 1 0 30" Grid.Row="1" Grid.Column="1" md:HintAssist.Hint="Password" md:TextFieldAssist.HasClearButton="True">
            <PasswordBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding ValidateCommand}" CommandParameter="{Binding ElementName=Password}"/>
            </PasswordBox.InputBindings>
        </PasswordBox>
        <!-- 按键操作 -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="用户管理" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" 
                Height="40" Width="100" Margin="10 5 10 5" Command="{Binding UserManagerCommand}"/>
            <Button Content="登录" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" 
                Height="40" Width="100" Margin="10 5 10 5"
                Command="{Binding ValidateCommand}" CommandParameter="{Binding ElementName=Password}"/>
        </StackPanel>
        <!-- 报错提示框 -->
        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding User.ErrorMessage}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Foreground="Red"/>
    </Grid>
</Window>
