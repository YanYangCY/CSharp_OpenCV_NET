<Window x:Class="CSharp_OpenCV_NET.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharp_OpenCV_NET.Views"       
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:SubViews="clr-namespace:CSharp_OpenCV_NET.Views.SubViews" 
       
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Title="Main Vision FrameWork" Height="800" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>


        <!-- 功能栏 -->
        <SubViews:MainToolBar Grid.Row="0" Grid.ColumnSpan="2" />
        <Button Content="Button" HorizontalAlignment="Left" Margin="416,93,0,0" Grid.Row="1" VerticalAlignment="Top" Command="{Binding ButtonAddNumCommand}"/>
        <Label  HorizontalAlignment="Left" Margin="228,93,0,0" Grid.Row="1" VerticalAlignment="Top" Content ="{Binding AppStatus.NumAdd}"/>
        <Button Content="TCP测试" HorizontalAlignment="Left" Margin="416,237,0,0" Grid.Row="1" VerticalAlignment="Top" Command="{Binding TcpSendTestCommand}"/>

        <!--<Border Grid.Row="0" Grid.ColumnSpan="2" BorderThickness="0" BorderBrush="LightGray">
            <SubViews:MainToolBar x:Name="ToolBarContainer"/>
        </Border>-->
    </Grid>
</Window>