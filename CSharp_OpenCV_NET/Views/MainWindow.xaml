<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharp_OpenCV_NET.Views"       
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:SubViews="clr-namespace:CSharp_OpenCV_NET.Views.SubViews" x:Class="CSharp_OpenCV_NET.Views.MainWindow"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Main Vision FrameWork" Height="800" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        

        <!-- 功能栏 -->
        <SubViews:MainToolBar Grid.Row="0" Grid.ColumnSpan="2" />
    </Grid>
</Window>
